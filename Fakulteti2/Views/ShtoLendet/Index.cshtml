        //var id_p = document.getElementById('Id_p');

        $(document).on('click', '#ShtoLendet', (event) => {

                //objekti qe do te shtohet
                let obj = {
                    
                    emri_l: $('#emri').val(),
                    ligjerata: $('#ligjerata').val(),
                    ushtrime: $('#ushtrime').val(),
                    ects: $('#ects').val(),
                    id_p: $('#id_p').val(),

                };
                //metoda post
                $.ajax({
                    url: API_URL ,

                    method: 'post',
                    dataType:'json',
                    data: obj,
                    success: (res) => {

                        alert("Te dhenat u shtuan me sukses!!");
                        document.location.reload(res);
                    },
                    error: (err) => {
                        alert("Profesori me id " + $('#id_p') + " nuk u gjet");
                    }
                });
            })


    </script>

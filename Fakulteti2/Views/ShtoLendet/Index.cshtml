<body>
    <div class="container">
        <div class="row">
            <!--Shto Studentin column -->
            <div class="col-md-6">
                <h1>Shto Lende </h1>
                <div class="form-group">
                    <label for="Id">Id Lendes</label>
                    <input type="number" class="form-control" id="id" readonly placeholder="ID AUTOGJENERUESE">
                </div>
                <div class="form-group">
                    <label for="Emri">Emri</label>
                    <input type="text" class="form-control" id="emri" placeholder="Lenda">
                </div>
                <div class="form-group">
                    <label for="Ligjerata">Ligjerata</label>
                    <input type="number" class="form-control" id="ligjerata" placeholder="Ligjeratat(ore)">
                </div>
                <div class="form-group">
                    <label for="Ushtrime">Ushtrime</label>
                    <input type="number" class="form-control" id="ushtrime" placeholder="Ushtrime(ore)">
                </div>
                <div class="form-group">
                    <label for="Ects">Ects</label>
                    <input type="number" class="form-control" id="ects" placeholder="ECTS KREDI">
                </div>
                <div class="form-group">
                    <label for="Drejtimi">Id_profesorit</label>
                    <input type="number" class="form-control" id="id_p" placeholder="id_profesorit">
                </div>
                <button id="ShtoLendet" type="submit" class="btn btn-primary">Shto Lende</button>
            </div>

</body>
